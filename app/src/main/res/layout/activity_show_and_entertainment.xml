<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".member.showandentertainment.ShowAndEntertainmentActivity"
    android:background="@drawable/member_bg">
    <ImageView
        android:id="@+id/header_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/show_entertainment"
        android:adjustViewBounds="true"
        android:maxWidth="927sp"
        android:maxHeight="334sp"
        android:padding="25sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_image"
        android:layout_above="@id/manipis">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10sp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/sae_1"
                        android:adjustViewBounds="true"
                        android:maxHeight="200sp"
                        android:maxWidth="150sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10sp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/sae_2"
                        android:adjustViewBounds="true"
                        android:maxHeight="200sp"
                        android:maxWidth="150sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10sp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/sae_3"
                        android:adjustViewBounds="true"
                        android:maxHeight="200sp"
                        android:maxWidth="150sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10sp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/sae_4"
                        android:adjustViewBounds="true"
                        android:maxHeight="200sp"
                        android:maxWidth="150sp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <!-- bottom -->
    <ImageView
        android:id="@+id/manipis"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="#802eac"
        android:layout_above="@+id/makapal"/>
    <ImageView
        android:id="@+id/makapal"
        android:layout_width="match_parent"
        android:layout_height="10sp"
        android:background="#ca65fd"
        android:layout_above="@+id/bottom_navigation"/>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/nav_item_color_state"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:menu="@menu/bottom_navigation_main"
        app:labelVisibilityMode="unlabeled"/>
</RelativeLayout>